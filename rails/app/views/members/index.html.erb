  <tr>
    <td><%= link_to("#{member.surname} #{member.name}", member) %></td>
    <td><%= member.party %></td>
    <td><%= "#{member.days * 100 / @days_count}% (#{member.days})" %></td>
    <td><img src="img_trans.gif" width="500" height="10" style="background:url(att.png) 0px -<%= member.id * 10 %>px; background-repeat:no-repeat;"/></td>
    <td><%= "#{member.performed_votes_percent}% (#{member.performed_votes})" %></td>
  </tr>
<% end %>
</table>


